div(ng-controller="ProjectsController", class="tribe-all-projects")
    include header-projects
    div
        section
            article(ng-repeat="project in projects")
                .tribe-project-icon
                    img(src="{{project.icon}}")
                .tribe-project-short-description
                    h3 {{project.friendlyName ? project.friendlyName : project.name}}
                    p {{project.shortDescription}}
                .tribe-project-buttons
                    div
                    div
                        a(href="projects/{{project.name}}") check it out
                        .tribe-project-share
                            h5 share it
                            div
                                a(href="http://www.facebook.com/sharer/sharer.php?u=https:{{baseFullPath}}projects/{{project.name}}", target="_blank")
                                    i.fa.fa-facebook.fa-2
                                a(href="https://twitter.com/intent/tweet?text=Check out https:{{baseFullPath}}projects/{{project.name}}", target="_blank")
                                    i.fa.fa-twitter.fa-2
include footer
