div(ng-controller="ProjectsController", class="tribe-all-projects")
    include header-projects
    div
        section
            article(ng-repeat="project in projects")
                .tribe-project-icon
                    img(src="{{project.icon}}")
                .tribe-project-short-description
                    h3 {{project.friendlyName ? project.friendlyName : project.name}}
                    p {{project.shortDescription}}
                .tribe-project-buttons
                    div
                    div
                        a(href="projects/{{project.name}}") check it out
                        .tribe-project-share
                            h5 share it
                            div
                                i(ng-click="openPopup('https://twitter.com/intent/tweet?text=Check out http:' + baseFullPath + 'projects/' + project.name)")
                                    i.fa.fa-twitter
                                i(ng-click="openPopup('http://www.facebook.com/sharer/sharer.php?u=http:' + baseFullPath + 'projects/' + project.name)")
                                    i.fa.fa-facebook



include footer
