div(ng-controller="ProjectsController", class="tribe-all-projects")
    include header-projects
    div
        section
            article(ng-repeat="project in projects")
                .tribe-project-icon
                    a(href="projects/{{project.name}}/")
                        img(ng-src="data:image/png;base64,{{project.icon}}")
                .tribe-project-short-description
                    a(href="projects/{{project.name}}/")
                        h3 {{project.friendlyName ? project.friendlyName : project.name}}
                        p {{project.shortDescription}}
                .tribe-project-buttons
                    div
                    div
                        a(href="projects/{{project.name}}/") check it out
                        .tribe-project-share
                            h5 share it
                            div
                                a(ng-href="{{'https://twitter.com/intent/tweet?text=Check out ' + baseURI + 'projects/' + project.name}}" target="_blank")
                                    i.fa.fa-twitter
                                a(ng-href="{{'http://www.facebook.com/sharer/sharer.php?u=' + baseURI + 'projects/' + project.name}}" target="_blank")
                                    i.fa.fa-facebook



include footer
